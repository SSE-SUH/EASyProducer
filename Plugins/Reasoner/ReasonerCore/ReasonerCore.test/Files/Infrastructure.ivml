        typedef IpAddress setOf(String);  //regEx für IP-Adressen fehlt noch
        typedef Port setOf(Integer);      //Wertebereich fehlt noch
        typedef TimeOut setOf(Integer);   //Einheit: ms
    
        compound TcpConnection {
