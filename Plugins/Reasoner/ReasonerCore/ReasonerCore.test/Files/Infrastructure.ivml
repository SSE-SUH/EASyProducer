        }
        
        typedef BaudRate Integer with (BaudRate = 1200 or BaudRate = 2400 or BaudRate = 4800 or BaudRate = 9600 or BaudRate = 19200 or BaudRate = 38400 or BaudRate = 57600 or BaudRate = 115200); // HE: corrected
