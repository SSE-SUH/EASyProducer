project Add {

    enum BindingTime {compile, runtime};
    annotate BindingTime bindingTime = BindingTime.compile to Add;

    compound Node {
        assign (bindingTime = BindingTime.runtime) to {
            Integer capacity;
        }
    }

    Node node = {};
    Boolean enable = true;    
    
    freeze {
        node;
        enable;
    } but (v | v.bindingTime == BindingTime.runtime);
    
}