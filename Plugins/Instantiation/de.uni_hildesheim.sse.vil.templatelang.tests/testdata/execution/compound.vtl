template compoundTest(Configuration config, FileArtifact target) {

    abstract compound MyCompound {
        Integer a = 1;
    }
    compound MyCompound1 refines MyCompound {
        String b = "5";
    }

    def main(Configuration config, FileArtifact target) {
        MyCompound1 c1 = new MyCompound1();
        MyCompound c0 = c1;
        '${c1.a} ${c0.a} ${c1.b}'
        c1.a = 3;
        c1.b = "z";
        '${c1.a} ${c0.a} ${c1.b}'
        c1 = new MyCompound1(a=2, b="a");
        '${c1.a} ${c0.a} ${c1.b}'
    }

}