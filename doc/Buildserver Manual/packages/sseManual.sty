%Command for inserting pictures
\newcommand{\pic}[5]
{
	\begin{nofloat}{figure}
		\fboxsep5mm
		\ifpdf
		\includegraphics[scale=#1]{pictures/#2}
		\fi
		\centering
		\caption[#3]{#4}
		\label{fig:#5}
	\end{nofloat}
}
\newcommand{\picWidth}[4]
{
	\begin{nofloat}{figure}
		\fboxsep5mm
		\ifpdf
		\includegraphics[width=\textwidth]{pictures/#1}
		\fi
		\centering
		\caption[#2]{#3}
		\label{fig:#4}
	\end{nofloat}
}
\newcommand{\wrappic}[6]
{
	\begin{wrapfigure}{#6}{#1\textwidth}
		%\fboxsep5mm
		\ifpdf
		\includegraphics[width=#1\textwidth]{pictures/#2}
		\fi
		\centering
		\caption[#3]{#4}
		\label{fig:#5}
	\end{wrapfigure}
}